        <child link="leddar_lens_link"/>
        <!--<origin rpy="1.5708 3.1416 1.5708" xyz="0.0165 -0.014 0.023"/>-->
        <origin rpy="1.5708 3.1416 1.5708" xyz="0.0165 -0.014 0.023"/>
    </joint>

    <link name="camera_mount_bracket_1_link">
        <visual>
            <geometry>
