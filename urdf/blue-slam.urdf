        </visual>
    </link>

    <joint name="base_to_left_motor_bracket_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_motor_bracket_link"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0735 -0.0145"/>
