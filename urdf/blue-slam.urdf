    </joint>

    <joint name="camera_board_to_camera_bracket_joint" type="fixed">
        <parent link="camera_mount_bracket_2_link"/>
        <child link="camera_board_link"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.002 0.0 0.0"/>
    </joint>

    <!-- Standoffs and other visual candy -->
