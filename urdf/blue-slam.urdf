    <joint name="left_motor_output_to_left_wheel_connector_joint" type="fixed">
        <parent link="left_motor_output_shaft_link"/>
        <child link="left_wheel_connector_link"/>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
